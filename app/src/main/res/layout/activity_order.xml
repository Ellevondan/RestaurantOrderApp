<?xml version="1.0" encoding="utf-8"?>
<!--
    activity_order.xml - Order Placement Screen Layout

    Purpose: Display menu items for ordering, with order summary on the right side.
    Layout optimized for tablet landscape orientation.

    Layout structure:
    - Header bar at top (table number, total price, action buttons)
    - Main area split:
      * Left/Center (70%): Grid of menu items
      * Right (30%): Static order summary panel
    - Bottom: Submit order button, back button
-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderActivity">

    <!-- Left section: Menu items (65% of screen width) -->
    <LinearLayout
        android:id="@+id/menuSection"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#F5F5F5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/divider"
        app:layout_constraintWidth_percent="0.65">

        <TextView
            android:id="@+id/tvMenuTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menu"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- ScrollView for menu items -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/menuItemsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- DRINKS SECTION -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Drinks"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnDrink1"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text="Coke\n$2.99"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btnDrink2"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text="Water\n$1.99"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btnDrink3"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text="Orange Juice\n$3.99"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnDrink4"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text="Coffee\n$3.49"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btnDrink5"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text="Tea\n$2.99"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btnDrink6"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text="Beer\n$5.99"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- APPETIZERS SECTION -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Appetizers"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnAppetizer1"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text="Caesar Salad\n$9.99"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btnAppetizer2"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text="Bruschetta\n$7.99"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btnAppetizer3"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text="Garlic Bread\n$5.99"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnAppetizer4"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text="Mozzarella Sticks\n$8.99"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btnAppetizer5"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text="Calamari\n$11.99"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btnAppetizer6"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text="Wings\n$10.99"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- MAINS SECTION -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Main Courses"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnMain1"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text="Margherita Pizza\n$12.99"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btnMain2"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text="Burger &amp; Fries\n$14.99"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btnMain3"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text="Carbonara\n$13.99"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnMain4"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text="Grilled Chicken\n$15.99"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btnMain5"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text="Steak\n$24.99"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btnMain6"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text="Salmon\n$18.99"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnMain7"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text="Pasta Alfredo\n$12.99"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btnMain8"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text="Fish &amp; Chips\n$13.99"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btnMain9"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text="Lasagna\n$14.99"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- DESSERTS SECTION -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Desserts"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnDessert1"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text="Tiramisu\n$6.99"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btnDessert2"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text="Cheesecake\n$7.99"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btnDessert3"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text="Brownie\n$5.99"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnDessert4"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text="Ice Cream\n$4.99"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btnDessert5"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text="Panna Cotta\n$6.99"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btnDessert6"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text="Apple Pie\n$5.99"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <!-- Vertical divider -->
    <View
        android:id="@+id/divider"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:background="#CCCCCC"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonBack"
        app:layout_constraintStart_toEndOf="@id/menuSection"
        app:layout_constraintEnd_toStartOf="@id/orderSummarySection" />

    <!-- Right section: Order summary (35% of screen width) -->
    <LinearLayout
        android:id="@+id/orderSummarySection"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonBack"
        app:layout_constraintStart_toEndOf="@id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.35">

        <TextView
            android:id="@+id/tvOrderSummaryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Summary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- ScrollView for order items -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/orderItemsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Order items will be added here dynamically -->
                <TextView
                    android:id="@+id/tvEmptyOrder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No items selected"
                    android:textAlignment="center"
                    android:textColor="#999999"
                    android:layout_marginTop="32dp" />

            </LinearLayout>
        </ScrollView>

        <!-- Total price -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total: $0.00"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="textEnd" />

    </LinearLayout>

    <!-- Navigation buttons at the bottom -->
    <Button
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to Tables"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/buttonSendOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Order"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"
        android:backgroundTint="#4CAF50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/buttonNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close Tab"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Fragment container - positioned above the buttons -->
    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- TODO: Optional - Add order status notifications -->
    <!-- - Banner or snackbar showing when orders are ready -->
    <!-- - Based on polling results from server -->
    <!-- - Different colors for different statuses (pending/in_progress/ready) -->



</androidx.constraintlayout.widget.ConstraintLayout>
