<?xml version="1.0" encoding="utf-8"?>
<!--
    activity_main.xml - Table Selection Screen Layout

    Purpose: Display 12 table buttons for server to select which table to work on.
    Layout should be optimized for tablet landscape orientation.

    Design suggestions:
    - Title at top: "Select Table"
    - Grid of 12 buttons (e.g., 4 rows x 3 columns or 3 rows x 4 columns)
    - Large, easy-to-tap buttons for tablet
    - Loading indicator while fetching menu items from server
    - Error message display if group creation or menu fetch fails
-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- TODO: Add title TextView -->
    <!-- - "Select Table" or "Choose a Table" -->
    <!-- - Large text size for tablet -->
    <!-- - Centered at top -->

    <!-- TODO: Add loading ProgressBar -->
    <!-- - Visible while creating group or fetching menu items -->
    <!-- - Center of screen -->
    <!-- - Hide when loading completes -->

    <!-- TODO: Add error TextView -->
    <!-- - Display error messages if API calls fail -->
    <!-- - Red text, center aligned -->
    <!-- - Initially hidden (visibility="gone") -->

    <!-- TODO: Add GridLayout or RecyclerView with GridLayoutManager -->
    <!-- - 12 buttons arranged in grid (suggest 4x3 or 3x4) -->
    <!-- - Each button labeled "Table 1", "Table 2", etc. -->
    <!-- - Large buttons with padding for easy tablet touch -->
    <!-- - Consider using Material Design buttons (MaterialButton) -->
    <!-- - All buttons with same style -->

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Table"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Button grid using nested LinearLayouts (3 rows x 4 columns) -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Row 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnTable1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="Table 1"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnTable2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="Table 2"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnTable3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="Table 3"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnTable4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="Table 4"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Row 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnTable5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="Table 5"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnTable6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="Table 6"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnTable7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="Table 7"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnTable8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="Table 8"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Row 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnTable9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="Table 9"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnTable10"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="Table 10"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnTable11"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="Table 11"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnTable12"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="Table 12"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>

    <!-- TODO: Optional - Add status bar at bottom -->
    <!-- - Display connection status to server -->
    <!-- - Display group ID (for debugging) -->




</androidx.constraintlayout.widget.ConstraintLayout>