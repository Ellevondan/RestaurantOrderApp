<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="API Test Console"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="16dp"
        android:textColor="#000000" />

    <!-- Test Buttons -->
    <Button
        android:id="@+id/btnTestConnection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test 0: Test Connection"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#4CAF50" />

    <Button
        android:id="@+id/btnFetchMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test 1: HÃ¤mta Meny"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#2196F3" />

    <Button
        android:id="@+id/btnSendOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test 2: Skicka Test-Order"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#FF9800" />

    <Button
        android:id="@+id/btnCheckStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test 3: Kolla Order Status"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#9C27B0" />

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#CCCCCC"
        android:layout_marginBottom="16dp" />

    <!-- Result TextView with ScrollView -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resultat:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="8dp"
        android:textColor="#000000" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:padding="12dp">

        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tryck pÃ¥ en knapp fÃ¶r att testa API..."
            android:textSize="14sp"
            android:fontFamily="monospace"
            android:textColor="#000000" />
    </ScrollView>

    <!-- Info text -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ’¡ Tips: Kolla Logcat fÃ¶r detaljerad output!"
        android:textSize="12sp"
        android:gravity="center"
        android:paddingTop="8dp"
        android:textColor="#666666" />

</LinearLayout>